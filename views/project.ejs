<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= project.title %> - Climate Solutions</title>
  <link href="/css/main.css" rel="stylesheet">
</head>

<body class="bg-base-200">
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <div class="container mx-auto mt-10 px-4">

    <!-- Hero Header -->
    <div class="hero bg-base-100 rounded-xl shadow-lg mb-10">
      <div class="hero-content flex flex-col text-center">
        <h1 class="text-4xl font-bold mb-2"><%= project.title %></h1>
        <p class="text-lg">Below, you will find detailed information about the project: <%= project.title %>.</p>
      </div>
    </div>

    <!-- Project Details -->
    <div class="bg-base-100 rounded-xl shadow-lg p-6 mb-10">
      <% if (project.feature_img_url) { %>
        <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="rounded-xl mb-6 w-full h-80 object-cover">
      <% } %>

      <p class="text-lg mb-6"><%= project.intro_short %></p>

      <% if (project.impact) { %>
      <div class="p-4 bg-base-200 rounded-lg mb-6">
        <h2 class="text-xl font-semibold mb-2">Impact</h2>
        <p><%= project.impact %></p>
      </div>
      <% } %>

      <% if (project.original_source_url) { %>
        <a href="<%= project.original_source_url %>" target="_blank" class="link link-primary mb-6 block">Read More (Source)</a>
      <% } %>

      <!-- Quote Box -->
      <div id="quoteBox" class="p-4 bg-base-200 rounded-lg text-center italic">
        <p id="quoteText">Loading inspirational quote...</p>
        <p id="quoteAuthor" class="mt-2 font-semibold"></p>
      </div>

      <!-- Back Button -->
      <div class="mt-8 text-center">
        <a href="#" onclick="history.back(); return false;" class="btn btn-outline btn-primary">← Back</a>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer footer-center p-4 bg-base-200 text-base-content mt-10">
    <p>© 2025 Gurleen Kaur - Climate Solutions Project</p>
  </footer>

  <!-- Fetch random quote -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(res => res.json())
        .then(data => {
          document.getElementById("quoteText").textContent = `"${data.quote}"`;
          document.getElementById("quoteAuthor").textContent = `– ${data.author}`;
        })
        .catch(() => {
          document.getElementById("quoteText").textContent = "Failed to load quote.";
        });
    });
  </script>
</body>
</html>